<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    android:background="@drawable/bkg_blue" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
         android:layout_marginTop="40dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
			android:layout_weight="1"
			
            android:orientation="vertical" >            

            <Button
                android:id="@+id/btnHeartRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#800020"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dip" 
                android:layout_marginBottom="5dip" 
                android:layout_marginLeft="5dip" 
                android:layout_marginRight="5dip" 
 
                android:gravity="left|top"
                android:paddingLeft="5dip"
                android:text="Heart Rate"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:typeface="serif"
                 android:textSize="20dp" />
  <!--  android:background="#FFFFFF"android:hint="@string/edit_message"-->


			<EditText
			    android:id="@+id/edit_heart"
			    android:layout_width="80dp"
			    android:layout_height="30dp"
			    
			    android:gravity="center_vertical|center_horizontal"
			    android:layout_centerVertical="true"
    android:layout_centerInParent="true"


			    android:layout_weight="1"
			    android:background="#ffffff"
			    android:textColor="@android:color/darker_gray"                
                android:textStyle="bold"
                android:typeface="serif"
			    android:ems="10"
			    android:textSize="20dp"
			    android:paddingLeft="10dip"
				android:paddingRight="10dip"
				android:singleLine="true"/>

            <TextView
                android:id="@+id/textBPM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/edit_heart"
                android:layout_weight="1"
                android:text="BPM"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="serif"
                			    android:paddingLeft="10dip"
				android:paddingRight="10dip"
                 />

            <Button
                android:id="@+id/save_activity"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textBPM"
                android:background="#ffffff"

                android:text="Edit"
                android:textColor="@android:color/darker_gray"
                android:textSize="18dp"
                android:textStyle="bold"
                android:typeface="serif"
    			android:paddingLeft="10dip"
				android:paddingRight="10dip" />
						
        </RelativeLayout>
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1" android:gravity="right|center_vertical" android:orientation="vertical">
            <Button android:id="@+id/btnBloodPressure" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:layout_marginBottom="5dip" android:layout_marginLeft="5dip" android:layout_marginRight="5dip" android:layout_marginTop="5dip" android:background="#ED9121" android:gravity="left|top" android:paddingLeft="5dip" android:text="Blood Pressure" android:textColor="@android:color/white" android:textSize="20dp" android:textStyle="bold" android:typeface="serif"/>

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/editBP"
                android:layout_toRightOf="@+id/edit_BP"
                android:layout_weight="1"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="mm"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/editBP"
                android:layout_toRightOf="@+id/EditText01"
                android:layout_weight="1"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="HG"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="serif" />

            <Button
                android:id="@+id/editBP"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignBaseline="@+id/edit_BP"
                android:layout_alignBottom="@+id/edit_BP"
                android:layout_alignRight="@+id/btnBloodPressure"
                android:background="#ffffff"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="Edit"
                android:textColor="@android:color/darker_gray"
                android:textSize="18dp"
                android:textStyle="bold"
                android:typeface="serif" />

            <EditText
                android:id="@+id/edit_BP"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/btnBloodPressure"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:ems="10"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="serif" />

            <EditText
                android:id="@+id/EditText01"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/TextView01"
                android:layout_marginLeft="31dp"
                android:layout_toRightOf="@+id/TextView01"
                android:layout_weight="1"
                android:background="#ffffff"
                android:ems="10"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="serif" >

                <requestFocus />
            </EditText>

        </RelativeLayout>

       <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
		   android:layout_weight="1"
		           
		   android:orientation="vertical" >
        
        <Button
            android:id="@+id/btnSleepInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#03C03C"
            android:text="Sleep Information"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dip" 
                android:layout_marginBottom="5dip" 
                android:layout_marginLeft="5dip" 
                android:layout_marginRight="5dip" 
                android:gravity="left|top"
                android:paddingLeft="5dip"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:typeface="serif"
                 android:textSize="20dp" />

            <TextView
                android:id="@+id/textSleep"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/edit_heart"
                android:layout_weight="1"
                android:text="Sleep"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="serif"
                			    android:paddingLeft="10dip"
				android:paddingRight="10dip"
                 />

            <Button
                android:id="@+id/save_activity"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignBaseline="@+id/edit_heart"
                android:layout_alignBottom="@+id/edit_heart"
                android:layout_alignRight="@+id/btnSleepInfo"
                android:background="#ffffff"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="Edit"
                android:textColor="@android:color/darker_gray"
                android:textSize="18dp"
                android:textStyle="bold"
                android:typeface="serif" />

            <EditText
                android:id="@+id/EditText02"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/save_activity"
                android:layout_toRightOf="@+id/textSleep"
                android:layout_weight="1"
                android:background="#ffffff"
                android:ems="10"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:singleLine="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textSleep"
                android:layout_alignBottom="@+id/textSleep"
                android:layout_toRightOf="@+id/EditText02"
                android:layout_weight="1"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="Awake"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="serif" />

            <EditText
                android:id="@+id/edit_heart"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/btnSleepInfo"
                android:layout_centerVertical="true"
                android:layout_marginLeft="19dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:ems="10"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:singleLine="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="serif" />

        </RelativeLayout>

       <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
		   android:layout_weight="1"
           android:orientation="vertical">
       
        <Button
            android:id="@+id/btnActivityCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Activity"
            android:background="#006600"
     			android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dip" 
                android:layout_marginBottom="5dip" 
                android:layout_marginLeft="5dip" 
                android:layout_marginRight="5dip" 
                android:gravity="left|top"
                android:paddingLeft="5dip"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:typeface="serif"
                 android:textSize="20dp" />

            <TextView
                android:id="@+id/textActivity"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/edit_heart"
                android:layout_weight="1"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="Steps"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="serif" />

            <Button
                android:id="@+id/save_activity"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignBaseline="@+id/textActivity"
                android:layout_alignBottom="@+id/textActivity"
                android:layout_alignRight="@+id/btnActivityCenter"
                android:background="#ffffff"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="Edit"
                android:textColor="@android:color/darker_gray"
                android:textSize="18dp"
                android:textStyle="bold"
                android:typeface="serif" />

            <EditText
                android:id="@+id/edit_heart"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/btnActivityCenter"
                android:layout_alignTop="@+id/textActivity"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:ems="10"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:singleLine="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="serif" />

            <EditText
                android:id="@+id/EditText03"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/textActivity"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:background="#ffffff"
                android:ems="10"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:singleLine="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textActivity"
                android:layout_toRightOf="@+id/EditText03"
                android:layout_weight="1"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="Duration"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:textStyle="bold"
                android:typeface="serif" />

        </RelativeLayout>
              <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
android:layout_weight="1"
           android:orientation="vertical" >
       
        <Button
            android:id="@+id/btnGetReco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="28dp"
            android:background="#3A3A38"
            android:text="Get Recommendation"
            android:textColor="#ADFF2F"
            android:textStyle="bold"
            android:typeface="serif" />
        </RelativeLayout>
    </LinearLayout>
    
</RelativeLayout>